@page
@using DataAccess.Models
@model Web_App.Pages.IndividualModel
@{
    ViewData["Title"] = "Player Details";
    ViewData["Subtitle"] = $"{Model.Player.Name}'s Statistics";
}

<style>
    #statsTabs .nav-link {
        color: var(--primary-color);
        background-color: var(--secondary-color);
        border: 1px solid var(--primary-color);
    }

        #statsTabs .nav-link.active {
            color: white;
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }

        #statsTabs .nav-link:hover {
            color: white;
            background-color: var(--primary-color);
        }
</style>

<div class="container">
    <div class="card shadow-sm">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="mb-0">@Model.Player.Name</h2>
                <span class="badge badge-primary">@Model.Player.Class</span>
            </div>
        </div>
        <div class="card-body">
            <p>Team: @Model.Player.TeamID | Status: <span class="badge @(Model.Player.BenchStatus.ToLower() == "active" ? "status-active" : "status-benched")">@Model.Player.BenchStatus</span></p>

            <ul class="nav nav-tabs" id="statsTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="offense-tab" data-bs-toggle="tab" data-bs-target="#offense" type="button" role="tab" aria-controls="offense" aria-selected="true">Offense</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="defense-tab" data-bs-toggle="tab" data-bs-target="#defense" type="button" role="tab" aria-controls="defense" aria-selected="false">Defense</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="special-teams-tab" data-bs-toggle="tab" data-bs-target="#special-teams" type="button" role="tab" aria-controls="special-teams" aria-selected="false">Special Teams</button>
                </li>
            </ul>

            <div class="tab-content mt-3" id="statsTabContent">
                <div class="tab-pane fade show active" id="offense" role="tabpanel" aria-labelledby="offense-tab">
                    <h3>Offense Statistics</h3>
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Game ID</th>
                                    <th>Passing Yards</th>
                                    <th>Passing Attempts</th>
                                    <th>Rushing Yards</th>
                                    <th>Carries</th>
                                    <th>Receiving Yards</th>
                                    <th>Receptions</th>
                                    <th>Touchdowns</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Offense? stat in Model.OffenseStats)
                                {
                                    <tr>
                                        <td>@stat.GameID</td>
                                        <td>@stat.PassingYards</td>
                                        <td>@stat.PassingAttempts</td>
                                        <td>@stat.RushingYards</td>
                                        <td>@stat.Carries</td>
                                        <td>@stat.ReceivingYards</td>
                                        <td>@stat.Receptions</td>
                                        <td>@stat.Touchdowns</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="tab-pane fade" id="defense" role="tabpanel" aria-labelledby="defense-tab">
                    <h3>Defense Statistics</h3>
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Game ID</th>
                                    <th>Interceptions</th>
                                    <th>Tackles</th>
                                    <th>Sacks</th>
                                    <th>Forced Fumbles</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Defense? stat in Model.DefenseStats)
                                {
                                    <tr>
                                        <td>@stat.GameID</td>
                                        <td>@stat.Interceptions</td>
                                        <td>@stat.Tackles</td>
                                        <td>@stat.Sacks</td>
                                        <td>@stat.ForcedFumbles</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="tab-pane fade" id="special-teams" role="tabpanel" aria-labelledby="special-teams-tab">
                    <h3>Special Teams Statistics</h3>
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Game ID</th>
                                    <th>Field Goals Made</th>
                                    <th>Field Goals Attempted</th>
                                    <th>Extra Points Made</th>
                                    <th>Extra Points Attempted</th>
                                    <th>Return Yards</th>
                                    <th>Return Attempts</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (SpecialTeams? stat in Model.SpecialTeamsStats)
                                {
                                    <tr>
                                        <td>@stat.GameID</td>
                                        <td>@stat.FieldGoalsMade</td>
                                        <td>@stat.FieldGoalsAttempted</td>
                                        <td>@stat.ExtraPointsMade</td>
                                        <td>@stat.ExtraPointsAttempted</td>
                                        <td>@stat.ReturnYards</td>
                                        <td>@stat.ReturnAttempts</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var triggerTabList = [].slice.call(document.querySelectorAll('#statsTabs button'))
        triggerTabList.forEach(function (triggerEl) {
            var tabTrigger = new bootstrap.Tab(triggerEl)

            triggerEl.addEventListener('click', function (event) {
                event.preventDefault()
                tabTrigger.show()
            })
        })
    </script>
}