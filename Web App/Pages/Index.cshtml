@page
@model IndexModel
@{
    ViewData["Title"] = "Fantasy Sports Database";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        :root {
            --primary-color: #330A57;
            --secondary-color: #A090C4;
        }

        body {
            font-family: 'Figtree', sans-serif;
        }

        .table-responsive {
            overflow-x: auto;
        }

        .stats-header {
            background: var(--primary-color);
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
        }

        .card-header {
            background-color: var(--primary-color) !important;
            color: white !important;
        }

        .table-light {
            background-color: var(--secondary-color) !important;
            color: var(--primary-color) !important;
        }

        .badge {
            padding: 0.5em 1em;
            border-radius: 4px;
        }

        .badge-primary {
            background-color: var(--primary-color);
            color: white;
        }

        .badge-secondary {
            background-color: var(--secondary-color);
            color: var(--primary-color);
        }

        .status-active {
            background-color: #28a745;
            color: white;
        }

        .status-benched {
            background-color: #ffc107;
            color: var(--primary-color);
        }

        .table-hover tbody tr:hover {
            background-color: rgba(160, 144, 196, 0.1) !important;
        }
    </style>
</head>

<div class="stats-header">
    <div class="container text-center">
        <h1 class="display-4">Fantasy Sports Database</h1>
        <p class="lead">Player Statistics and Information</p>
    </div>
</div>

<div class="container">
    <div class="card shadow-sm">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="mb-0">Players Roster</h2>
                <span class="badge badge-secondary">Total: @(Model.Players?.Count ?? 0)</span>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Name</th>
                            <th scope="col">School</th>
                            <th scope="col">Game</th>
                            <th scope="col">Class</th>
                            <th scope="col">Health</th>
                            <th scope="col">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Players != null && Model.Players.Any())
                        {
                            @foreach (var player in Model.Players)
                            {
                                <tr>
                                    <td>@player.PlayerID</td>
                                    <td><strong>@player.Name</strong></td>
                                    <td>@player.SchoolName</td>
                                    <td>@player.GameID</td>
                                    <td>@player.Class</td>
                                    <td>
                                        <span class="@(player.HealthStatus.ToLower() == "healthy" ? "text-success" : "text-danger")">
                                            @player.HealthStatus
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge @(player.BenchStatus.ToLower() == "active" ? "status-active" : "status-benched")">
                                            @player.BenchStatus
                                        </span>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center py-4">
                                    <div class="text-muted">
                                        <i class="fas fa-info-circle me-2"></i>No players found in the database
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>